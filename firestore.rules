rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == "poshankumarsahu01@gmail.com";
    }

    // Submissions collection rules
    match /submissions/{submissionId} {
      // Allow anyone to create submissions
      allow create: if true;
      
      // Allow reading submissions
      allow read: if true;
      
      // Only allow admin to update and delete
      allow update, delete: if isAdmin();
    }

    // For all other collections, require admin access
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
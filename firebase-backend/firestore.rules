rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admin rules - full access to all documents
    match /{document=**} {
      allow read, write: if request.auth != null && 
                        request.auth.token.email == "poshankumarsahu01@gmail.com";
    }
    
    // Submissions collection rules
    match /submissions/{submissionId} {
      // Allow anyone to create submissions
      allow create: if true;
      
      // Allow anyone to read their own submissions using mobile number
      allow read: if resource.data.mobile == request.resource.data.mobile;
      
      // Only allow admin to update and delete
      allow update, delete: if request.auth != null && 
                          request.auth.token.email == "poshankumarsahu01@gmail.com";
                          
      // Validate submission data
      function isValidSubmission() {
        let data = request.resource.data;
        return data.name is string &&
               data.mobile is string &&
               data.mobile.matches('^[0-9]{10}$') &&
               data.timestamp is timestamp;
      }
    }
  }
}
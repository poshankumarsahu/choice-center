rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == "poshankumarsahu01@gmail.com";
    }

    // Submissions collection rules
    match /submissions/{submissionId} {
      // Validate submission data
      function isValidSubmission() {
        let incomingData = request.resource.data;
        return incomingData.name is string &&
               incomingData.mobile is string &&
               incomingData.mobile.matches('^[0-9]{10}$') &&
               incomingData.timestamp is timestamp;
      }

      // Allow anyone to create submissions with basic validation
      allow create: if true;
      
      // Allow public reading of submissions
      allow read: if true;
      
      // Only allow admin to update and delete
      allow update, delete: if isAdmin();
    }

    // Test collection for connection testing
    match /test/{document} {
      allow read, write: if true;
    }
  }
}
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow reading for everyone
      allow read: if true;
      
      // Allow write operations only for admin
      allow write: if request.auth != null && 
                  request.auth.email == "poshankumarsahu01@gmail.com";
      
      // Add specific rules for submissions collection
      match /submissions/{submissionId} {
        allow read: if true;
        allow create: if true; // Allow anyone to create submissions
        allow update, delete: if request.auth != null && 
                            request.auth.email == "poshankumarsahu01@gmail.com";
      }
    }
  }
}
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /submissions/{userId}/{type}/{fileName} {
      // Allow public read/write for all users
      allow read, create: if true;
      
      // Allow delete for admin
      allow delete: if request.auth != null && 
                   request.auth.token.email == "poshankumarsahu01@gmail.com";
      
      // Validate file size and type
      allow write: if request.resource.size < 5 * 1024 * 1024 && // 5MB max
                  request.resource.contentType.matches('application/pdf|image/jpeg|image/png');
    }
  }
}